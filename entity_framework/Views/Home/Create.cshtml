@model entity_framework.Models.Emp

@{
    ViewData["Title"] = "Create";
}


<link href="https://kendo.cdn.telerik.com/themes/6.7.0/default/default-main.css" rel="stylesheet" />
<script src="https://kendo.cdn.telerik.com/2023.2.829/js/jquery.min.js"></script>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
 <script src="https://kendo.cdn.telerik.com/2023.2.829/js/kendo.all.min.js"></script>

<h1>Create</h1>

<h4>Emp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" id="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="age" class="control-label"></label>
                <input asp-for="age" class="form-control" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Go to List</a>
</div>

<script>
    var dataSource = new kendo.data.DataSource({
        data: [
            { CityID: 1, CityName: "pune" },
            { CityID: 2, CityName: "banglore" },
            { CityID: 3, CityName: "Hydrabad" },
            { CityID: 4, CityName: "channai" },
            { CityID: 5, CityName: "Mumbai" },
            { CityID: 6, CityName: "Delhi" },
            { CityID: 7, CityName: "Gurugram" },
            { CityID: 8, CityName: "Indore" },
            { CityID: 9, CityName: "Jaipur" },
            { CityID: 10, CityName: "Bhopal" },
            { CityID: 11, CityName: "Jodhpur" },
            { CityID: 12, CityName: "Lucknow" },
            { CityID: 13, CityName: "Kanpur" },
            { CityID: 14, CityName: "Ahemdabaad" },
            { CityID: 15, CityName: "Surat" },
            { CityID: 16, CityName: "Udaipur" },
            { CityID: 17, CityName: "Chandigarh" },
            { CityID: 18, CityName: "Dharmshala" },
            { CityID: 19, CityName: "Patna" },
            { CityID: 20, CityName: "Gorakhpur" }

        ],
        sort: { field: "CityName", dir: "asc" }
    });

    $("#city").kendoDropDownList({
        filter: "contains",
        optionLabel: 'Please select city...',
        dataTextField: "CityName",
        dataValueField: "city",
        height: "400px",
        dataSource: dataSource
    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
